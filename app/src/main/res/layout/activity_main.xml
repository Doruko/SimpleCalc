<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.alejandro.calculadora.MainActivity"
    android:weightSum="1">

    <TextView
        android:layout_weight="0.1"
        android:id="@+id/operationsTV"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <TextView
        android:layout_weight="0.1"
        android:id="@+id/resultTV"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:id="@+id/calc_7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7"
                android:onClick="numClick"/>
            <Button
                android:id="@+id/calc_8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8"
                android:onClick="numClick"/>
            <Button
                android:id="@+id/calc_9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                android:onClick="numClick"/>
            <Button
                android:id="@+id/calc_divide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/"
                android:onClick="operatorClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:id="@+id/calc_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:onClick="numClick"/>
            <Button
                android:id="@+id/calc_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:onClick="numClick"/>
            <Button
                android:id="@+id/calc_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                android:onClick="numClick"/>
            <Button
                android:id="@+id/calc_multiply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="x"
                android:onClick="operatorClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:id="@+id/calc_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:onClick="numClick"/>
            <Button
                android:id="@+id/calc_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2"
                android:onClick="numClick"/>
            <Button
                android:id="@+id/calc_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                android:onClick="numClick"/>
            <Button
                android:id="@+id/calc_sum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+"
                android:onClick="operatorClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:id="@+id/calc_0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:onClick="numClick"/>
            <Button
                android:id="@+id/calc_equal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="="
                android:onClick="specialClick"/>
            <Button
                android:id="@+id/calc_clean"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Clean"
                android:onClick="specialClick"/>
            <Button
                android:id="@+id/calc_minus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                android:onClick="operatorClick"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
